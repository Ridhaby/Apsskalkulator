<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/value1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Masukkan nilai 1"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#9A9696"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.128" />

    <EditText
        android:id="@+id/value2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Masukkan nilai 2"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHint="#9A9696"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/value1"
        app:layout_constraintVertical_bias="0.025" />

    <TextView
        android:id="@+id/viewHasil"
        android:layout_width="265dp"
        android:layout_height="61dp"
        android:text="Hasil"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/value2"
        app:layout_constraintVertical_bias="0.05" />

    <Button
        android:id="@+id/tbTambah"
        android:layout_width="135dp"
        android:layout_height="125dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="12dp"
        android:onClick="clickTambah"
        android:text="TAMBAH"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tbKali"
        app:layout_constraintEnd_toStartOf="@+id/tbKurang"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/tbKurang"
        android:layout_width="135dp"
        android:layout_height="125dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="12dp"
        android:onClick="clickKurang"
        android:text="KURANG"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tbBagi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tbTambah" />

    <Button
        android:id="@+id/tbKali"
        android:layout_width="135dp"
        android:layout_height="125dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="160dp"
        android:onClick="clickKali"
        android:text="KALI"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tbBagi"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/tbBagi"
        android:layout_width="135dp"
        android:layout_height="125dp"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="160dp"
        android:onClick="clickBagi"
        android:text="BAGI"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toEndOf="@+id/tbKali" />
</androidx.constraintlayout.widget.ConstraintLayout>